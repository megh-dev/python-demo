pipeline {
    agent any
    stages {
        stage('Build image') {
            steps {
                echo 'Starting to build docker image'

                script {
                    def customImage = docker.build("my-image:${env.BUILD_ID}")
                   
                }
            }
        }
       stage('run') {
            steps {
                sh docker run -d -p 5002:5000 --name python my-image:${env.BUILD_ID}

                
                }
            }
        }    
    }
}

