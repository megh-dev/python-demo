pipeline {
    agent any
    stages {
        stage('Build image') {
            steps {
                echo 'Starting to build docker image'

                script {
                    def customImage = docker.build("my-image")
                   
                }
            }
        }
       stage('run') {
            steps {
                sh "docker run -d -p 5002:5000 --name meg my-image"
            }
        }    
    }
}

